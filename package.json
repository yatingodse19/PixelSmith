{
  "name": "pixelsmith",
  "version": "1.0.0",
  "description": "Privacy-first, offline image resizer, converter, and batch processor",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "pixelsmith": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && npm run build:ui",
    "build:ui": "cd src/ui && vite build",
    "dev": "tsc --watch",
    "dev:ui": "cd src/ui && vite",
    "dev:server": "node dist/server/index.js",
    "start": "node dist/cli/index.js",
    "start:ui": "npm run build && concurrently \"npm run dev:server\" \"npm run dev:ui\"",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "image",
    "resize",
    "convert",
    "compress",
    "batch",
    "offline",
    "privacy",
    "sharp",
    "libvips"
  ],
  "author": "yatin godse",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "sharp": "^0.33.2",
    "yargs": "^17.7.2",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "p-queue": "^8.0.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/yargs": "^17.0.32",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.1",
    "pixelmatch": "^5.3.0"
  }
}
