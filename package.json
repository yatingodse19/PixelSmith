{
  "name": "pixelsmith",
  "version": "1.0.0",
  "description": "Privacy-first, 100% browser-based image resizer, converter, and batch processor powered by WebAssembly",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "pixelsmith": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && npm run build:ui",
    "build:ui": "cd src/ui && vite build",
    "dev": "tsc --watch",
    "dev:ui": "cd src/ui && vite",
    "start": "npm run dev:ui",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "image",
    "resize",
    "convert",
    "compress",
    "batch",
    "offline",
    "privacy",
    "webassembly",
    "wasm",
    "photon",
    "browser",
    "client-side"
  ],
  "author": "yatin godse",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@jsquash/jpeg": "^1.6.0",
    "@jsquash/webp": "^1.5.0",
    "@silvia-odwyer/photon": "^0.3.3",
    "chalk": "^5.3.0",
    "jszip": "^3.10.1",
    "ora": "^8.0.1",
    "p-queue": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-toastify": "^9.1.3",
    "sharp": "^0.33.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "pixelmatch": "^5.3.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^1.2.1"
  }
}
